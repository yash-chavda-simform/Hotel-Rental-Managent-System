<section class="containers forms">
  <div class = "form login">
    <div class="form-content">
      <header>Login</header>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field input-field">
          <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field input-field">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password" %>
        </div>
        <br/>
        <% if devise_mapping.rememberable? %>
          <div class="field input-field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions field button-field">
          <%= f.submit "Log in", class: "button-color" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
